---
import { getCollection } from 'astro:content'

import Organisation from './organisation.astro'

const organisations = await getCollection('organisations', ({ data }) => {
    return data.type === 'university'
})
---

<div class="">
    <h2 class="text-3xl font-bold antialiased">Education</h2>
    {organisations.map((organisation) => <Organisation entry={organisation} />)}
</div>
