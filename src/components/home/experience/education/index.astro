---
import { getCollection } from 'astro:content'

import Organisation from '../organisation/index.astro'

const universities = await getCollection('organisations', ({ data }) => {
    return data.type === 'university'
})
---

<div>
    <h2 class="text-2xl font-semibold antialiased">Education</h2>
    {universities.map((universities) => <Organisation organisation={universities} />)}
</div>
