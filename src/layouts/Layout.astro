---
interface Props {
    title?: string
}

const { title = null } = Astro.props

const site = 'Matthew Akino-Wittering'

function titleText(title: string | null) {
    return title ? `${title} - ${site}` : site
}
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Delicious+Handrawn&display=swap"
            rel="stylesheet"
        />
        <meta name="generator" content={Astro.generator} />
        <title>{titleText(title)}</title>
    </head>
    <body class="flex min-h-screen flex-col">
        <slot />
    </body>
</html>
