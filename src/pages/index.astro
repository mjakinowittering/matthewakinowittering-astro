---
import Layout from '../layouts/Layout.astro'

import AboutMe from '../components/home/about-me/index.astro'
import Experience from '../components/home/experience/index.astro'

import { calcLengthInYears } from '../lib/utils.ts'

const dateFrom = new Date('2010-01-01T00:00:00+0000')
const dateTo = new Date()

const metaData = {
    description: `I am a Product Manager with over ${calcLengthInYears(
        dateFrom,
        dateTo
    )} of experience, primarily in internal platforms and B2B SaaS applications.`,
    additionalMetaTags: [
        {
            name: 'google-site-verification',
            content: 'F_gIghpXfLjo0LORq-3zJ1HjUIlKmy2iTb9lWQD_BfM'
        }
    ]
}
---

<Layout metaData={metaData}>
    <div class="flex-grow bg-white">
        <div class="container mx-auto max-w-6xl py-16">
            <AboutMe />
        </div>
    </div>
    <div class="flex-grow bg-[#f7f7f4]">
        <div class="container mx-auto max-w-6xl space-y-16 py-16 md:space-y-32">
            <Experience />
        </div>
    </div>
</Layout>
