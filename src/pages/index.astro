---
import Layout from '../layouts/Layout.astro'

import Header from '../components/header/index.astro'

import AboutMe from '../components/home/about-me/index.astro'
import Experience from '../components/home/experience/index.astro'
import WhatDoIDo from '../components/home/what-do-i-do/index.astro'

import { calcLengthInYears } from '../lib/utils.ts'

const dateFrom = new Date('2010-01-01T00:00:00+0000')
const dateTo = new Date()

const metaData = {
    description: `I am a Product Manager with over ${calcLengthInYears(
        dateFrom,
        dateTo
    )} of experience, primarily in internal platforms and B2B SaaS applications.`,
    additionalMetaTags: [
        {
            name: 'google-site-verification',
            content: 'F_gIghpXfLjo0LORq-3zJ1HjUIlKmy2iTb9lWQD_BfM'
        }
    ]
}
---

<Layout metaData={metaData}>
    <Header />
    <div class="flex-grow">
        <div class="container mx-auto max-w-6xl space-y-8 py-8">
            <AboutMe />
            <div
                class="flex items-center py-3 text-sm before:me-6 before:flex-1 before:border-t before:border-gray-200 after:ms-6 after:flex-1 after:border-t after:border-gray-200 dark:text-white dark:before:border-neutral-600 dark:after:border-neutral-600"
            >
                Center aligned
            </div>
            <WhatDoIDo />
            <div
                class="flex items-center py-3 text-sm before:me-6 before:flex-1 before:border-t before:border-gray-200 after:ms-6 after:flex-1 after:border-t after:border-gray-200 dark:text-white dark:before:border-neutral-600 dark:after:border-neutral-600"
            >
                Center aligned
            </div>
            <Experience />
        </div>
    </div>
</Layout>
